<% recipes_by_section.each do |section, recipes_in_section| %>
  <h2 style="text-transform: capitalize">
    <%= section %>
  </h2>
  <ul>
  <% recipes_in_section.each do |recipe| %>
    <li style="text-transform: capitalize">
      <a href="recipes/<%= recipe.id %>">
        <%= recipe.name %>
      </a>
    </li>
  <% end %>
  </ul>
<% end %>
